PROC="nginx"
for p in $PROC
do
  ps cax | grep $p > /dev/null

  if [ $? -eq 0 ]; then
    echo "Process $p is running stop_server."  >> /var/log/codedeploy.log
  else
    echo "Process $p is not running stop_server."  >> /var/log/codedeploy.log
  fi
done
echo 'stop_server' >> /var/log/codedeploy.log
